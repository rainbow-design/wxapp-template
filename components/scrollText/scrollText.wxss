/* components/scrollText/scrollText.wxss */
.content-box {
  position: relative;
  margin-left: 12rpx;
  overflow: hidden;
  width: 520rpx;
}

.content-text {
  white-space: nowrap;
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 90rpx;
}
.mask {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 2;
  width: 100%;
  height: 100%;
  background: #ffffff;
}
