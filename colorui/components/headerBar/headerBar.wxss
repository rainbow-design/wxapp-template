/* colorui/components/header-bar.wxss */
.home {
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
}
.homeBorder{
  display: flex;
  align-items: center;
}
.avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-left: 40rpx;
  overflow: hidden;

}
.personal {
  font-size: 34rpx;
  font-weight: bold;
  color: rgba(0, 0, 0, 1);
  line-height: 34rpx;
  display: block;
  width: 100%;
  text-align: center;
  margin-top: 75rpx;
}
.homeBorder {
  border-bottom: 1rpx solid #eeeeee;
  background: #ffffff;
  padding-bottom: 10rpx;
}
.rightBar {
  margin-bottom: 20rpx;
}
.content {
  font-weight: bold;
  font-size: 30rpx;
  color: rgba(0, 30, 64, 1);
  line-height: 30rpx;
}
