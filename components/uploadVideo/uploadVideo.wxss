.imgsBoxWrap {
  display: flex;
  justify-content: flex-start;
  width: 100%;
  height: 100%;
}

.imgBox {
  position: relative;
  width: 100%;
  height: 100%;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.imgBox .video {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  overflow: hidden;
}
.imgBox .addIcon {
  position: absolute;
  top: 30%;
  left: 50%;
  transform: translateX(-50%);
  width: 34rpx;
  max-height: 34rpx;
}

.imgBox .close {
  position: absolute;
  top: 12rpx;
  right: 15rpx;
  width: 40rpx;
  height: 40rpx;
}
.toastText {
  position: absolute;
  width: 90%;
  bottom: 62rpx;
  left: 50%;
  transform: translateX(-50%);
  height: 26rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 26rpx;
  word-wrap: nowrap;
  text-align: center;
}
